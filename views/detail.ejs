<div class="container mt-3">
  <div class="row">
    <div class="col text-center">
      <h1>Detail Contact</h1>
      <% if (!contact) { %>
      <div class="alert alert-danger" role="alert">
        <p class="fw-bold">Data Contact tidak ada</p>
        <a href="/contact" class="alert-link fw-normal"
          >&laquo; Kembali ke Daftar Contact</a
        >
      </div>
      <% } else { %>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <div class="card" style="width: 18rem">
        <div class="card-body">
          <h5 class="card-title"><%= contact.nama %></h5>
          <h6 class="card-subtitle mb-2 text-body-secondary">
            <%= contact.noHp %>
          </h6>
          <p class="card-text"><%= contact.email %></p>
          <a
            href="/contact/edit/<%= contact.nama %>"
            class="btn btn-warning badge text-dark"
            >Edit</a
          >
          <a
            href="/contact/delete/<%= contact.nama %>"
            class="btn btn-danger badge"
            onclick="return confirm('Hapus data <%= contact.nama %>?')"
            >Hapus</a
          >
          <a href="/contact" class="card-link d-block mt-3"
            >&laquo; Kembali ke Daftar Contact</a
          >
        </div>
      </div>
    </div>
  </div>
  <% } %>
</div>
